@model List<project74.Models.block_user>
@{ ViewBag.Title = "ViewBlock";
                Layout = "~/Views/Shared/_Layout.cshtml"; }
<br />
<br />
<br />
<br />
<br />
<br />

<form class="form" method="post" action="@Url.Action("ViewBlock", "Admin")">
    <div class="input-group">
        <input type="search" name="username" placeholder="Search" style=" border-style: solid; border-color:#C4698A; height: 35px; margin:5px; padding:5px;" />
        <button type="submit" class="btn text-white m-1" style="background-color: #C4698A;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
            </svg>
        </button>
    </div>
</form>
<br />

<div style="margin:20px;">
    @foreach (var item in Model)
    {
<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            @if (item.image_id == null)
            {<img src="~/attach/image.png" /> }
            else
            {<img src="/attach/@item.image_id" />}
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@item.username</h5>
                @Html.ActionLink("UnBlock", "UnBlock", new { u_id = item.id }, new { @class = "btn text-white m-1", style = "background-color: #C4698A;  margin:5px;" })
            </div>
        </div>
    </div>
</div>}
</div>