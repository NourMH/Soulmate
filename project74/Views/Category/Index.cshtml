@model List<project74.Models.category>
@{
    ViewBag.Title = "Index";
}
<h2 class="text-center" style="margin-top:4em;">Categories</h2>
<center>@Html.ActionLink("Create", "Create", "Category", null, new { @class = "btn bg-pink", style = " margin: 0 3em; " })
</center>
<div class="container" style="margin-top: 4em;">
    @foreach (var item in Model)
    {
        <div class="row mb-5">
            <div class="col-lg-5 " style="margin-left:100px">
                <h2 class="m-2 " style="margin-top:1em;">@item.cat_name</h2>
                <p>@item.description</p>
                @Html.ActionLink("edit", $"Edit/{@item.cat_id}", "Category", null, new { @class = "btn bg-pink", style = " margin: 1em 0em; " })
                @Html.ActionLink("delete", $"Delete/{@item.cat_id}", "Category", null, new { @class = "btn", style = " margin: 1em 0em; background-color:#dc3545; ", onclick = ("return confirm('are you sure to delete this category')") })
            </div>
            <div class="col-lg-1"></div>
            <div class="col-lg-4 ">
                @if (item.image != null)
                {
                    <img src="~/attach/@item.image" style="margin:2em;width:80%; height:70%" class="d-xl-inline-block m-3" />
                }
                else
                {
                    <img src="~/attach/overflow.jpg" style="margin:2em;width:100%;" class="d-xl-inline-block m-3" />
                }
            </div>
        </div>
    }
</div>