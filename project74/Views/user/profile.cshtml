@model project74.Models.user
@{
    ViewBag.Title = "profile";

}
<style>

    .circletag {
        display: block;
        width: 200px;
        height: 200px;
        background: #E6E7ED;
        -moz-border-radius: 50px;
        -webkit-border-radius: 50px;
        text-align: center;
    }

        .circletag img {
            margin-top: 7px;
        }
</style>
<center>
    <section id="vendors">
        <div class="container">
            <div class="row" style="margin-top:40px">
                <h2>Your Profile</h2>
                <div class="container">
                        <div >
                            <div class="col-1"></div>
                            <div style="font-family: 'Dancing Script', cursive; font-size: 20px;" class="col-xs-6 col-9">
                                @if (Model.image_id != null)
                                {
                            <img class="circletag" src="~/attach//@Model.image_id" width="100" height="100" /> }
                        else
                        {
                            <img class="circletag" src="~/attach/image.png" width="100" height="100" />
                            }
                                <br>
                                <button style="background-color:#C4698A;">
                                    <a href="/User/edit/@Model.id" class = "btn bg-pink"  style="font-family: 'Dancing Script', cursive; font-size: 20px;color:white;">Edit Information</a>
                                </button>
                                &nbsp;&nbsp;
                                <input type="button" class = "btn bg-pink"  style="background-color:#C4698A; font-family: 'Dancing Script' , cursive; font-size: 20px; color:white;" value="Change Password" title="Save this record" onclick="location.href='@Url.Action("changepassword", "User", new { id = Model.id })'" />

                            </div>
                            <div style=" width:auto;" class="col-xs-6 ">

                                <ul style="position:center; text-align:center;font-family: 'Dancing Script', cursive; font-size: 20px; ">

                                    <li style="font-family: 'Dancing Script', cursive; font-size: 26px;">User Name : @Model.username</li>
                                    <li style="font-family: 'Dancing Script', cursive; font-size: 26px;">First Name : @Model.fname </li>
                                    <li style="font-family: 'Dancing Script', cursive; font-size: 26px;">Last Name :  @Model.lname</li>
                                    <li style="font-family: 'Dancing Script', cursive; font-size: 26px;">Mobile :   <span style="font-family: 'Dancing Script', cursive; font-size: 26px;">0</span>@Model.mobile</li>
                                    <li style="font-family: 'Dancing Script', cursive; font-size: 26px;">
                                        Location : @if (Model.loc != null)
                                        {<u><a href="@Model.loc" style="color:blue;"> Go To your Location</a></u>}
                                        else
                                        { <span>No Location</span>}
                                    </li>
                                    <li style="font-family: 'Dancing Script', cursive; font-size: 26px;">Adress : @Model.Adress </li>

                                    @{ int counter = 1;
                                        foreach (var item in ViewBag.c)
                                        {
                                <li style="font-family: 'Dancing Script', cursive; font-size: 26px;">
                                    Category @counter :  @item.cat_name
                                    <input type="button" class = "btn bg-pink"  style="font-size:large;   background-color:#C4698A; color:white;" value="Details" title="Save this record" onclick="location.href='@Url.Action("packages", "User", new { cat_id = item.cat_id })'" />
                                    <input type="button"class = "btn bg-pink"  value="Remove" style="font-size:large;  background-color: #DC4343;color:white;" title="Save this record" onclick="if(confirm('Are you sure?'))location.href='@Url.Action("deletecat", "User", new { cat_id = item.cat_id })'" />

                                </li> counter++;
                                            } }


                                </ul>
                            </div>


                </div>
                </div>
                </div>
        </div>
        </section>


</center>