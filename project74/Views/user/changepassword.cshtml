@model project74.Models.user
@{
    ViewBag.Title = "changepassword";
}

<section id="vendors">
    <div class="container">
        <div class="row" style="margin-top:40px">

            <div class="container p-5">
                <div class="row">

                    <div class="col-1"></div>
                    <div class="col-md-7 col-sm-11">
                        <h2>change password</h2>
 
                                <form method="post">
                                    @Html.HiddenFor(n => n.id)
                                    <div class="form-group">
                                        <label>Old Password</label>
                                        <input type="password" name="oldpass"  style= "color:black;width:99%;height:3em;border: 1px solid #C4698A;" class = "form-group  m-1"  />
                                    </div>
                                    <div class="form-group">
                                        <label>New Password</label>
                                        <input type="password" name="password"  style= "color:black;width:99%;height:3em;border: 1px solid #C4698A;" class = "form-group  m-1"  />
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(n => n.confrim_pass)
                                        @Html.PasswordFor(n => n.confrim_pass, new { @style = "color:black;width:99%;height:3em;border: 1px solid #C4698A;", @class = "form-group  m-1" })

                                        @Html.ValidationMessageFor(n => n.confrim_pass, "", new { @class = "text-danger" })

                                        <input type="submit" value="Save" style="background-color: #C4698A;" id="btn" class="btn text-white m-1" />
                                    </div>
                                    </form>
                                    </div></div></div></div></section>