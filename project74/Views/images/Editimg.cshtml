@model project74.Models.image

@{
    ViewBag.Title = "Editimg";
}

<div class="container" style="margin-top:9em;">
    <div class="col-md-7 col-sm-11">
        <form class="form" method="post" enctype="multipart/form-data">
            <h2 class="form_title title form-group">Edit img</h2>
            @Html.HiddenFor(n => n.img_id)
            <div class="form-group">
                <label for="@Model.p_id">Package Name</label>
                @Html.DropDownListFor(n => n.p_id, (SelectList)ViewBag.package, new { @style = "color:black;width:99%;height:3em;border: 1px solid #C4698A;", @class = "form-group  m-1" })
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.img_url)
                @Html.TextBoxFor(n => n.img_url, new { @class = "form-control", @style = "color:black;" })
                <input type="file" name="file" style="color:black;" />
            </div>
            <div class="form-group">
                <input type="submit" value="upload images" class="btn btn-danger text-white m-1" style="background-color: #C4698A" />
                <br />
                @Html.ActionLink("Back to List", "Imgindex")
            </div>
            
        </form>
    </div>
</div>
